<%- include("header") -%>


<%- include("sidenav") -%>

<style>
    .bigtext{
        font-size: 200px;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript">
    $(function(){				
        $('#like').click(function(e){
            e.preventDefault();
            var data = {};
			data.title = "title";
			data.message = "message";
            $.ajax({
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                url: 'http://localhost:3000/community',						
                success: function(data) {
                    console.log('success');
                    console.log(JSON.stringify(data));
                }
            });
        });	
        			
    });

    $(function(){				
        $('#add_comment').click(function(e){
            e.preventDefault();
            var data = {};
			data.title = "title";
            data.message = "message";
            $.ajax({
                type: 'POST',
                data: data,
                contentType: 'application/json',
                url: 'http://localhost:3000/community',						
                success: function(data) {
                    console.log('success');
                    console.log(JSON.stringify(data));
                }
            });
        });				
    });
</script>



    <!-- BEGIN: Page Main-->
    <div id="main">
      <div class="row">
        <div class="content-wrapper-before gradient-45deg-indigo-purple"></div>
        <div class="col s12">
          <div class="container">
          

  <div class="col s12 ">
      <div id="inline-form" class="card card card-default scrollspy">
        <div class="card-content">

             <div id="view-higlight-table" class="active">
              <div class="row">
                    <div class="col s12">
                      <table class="highlight">
                        <tbody>

                          <% all_urls.forEach(function(item) { %>
                            <td>  
                              <center> <p class="flow-text"><span class="purple-text text-darken-2" class="card-title bigtext"><%=item.post_text%></span></p>
                              </center>
                                <br/>
                                <br/>
                                 <div class="video-container">
                                    <iframe width="853" height="480" frameborder="0" src="<%=item.video_url%>" ></iframe>
                                </div>

                                
                                
                                <div class="row mt-0">
                                <div class="input-field col m8 s6">
                                        <input id="last_name" type="text" class="validate">
                                       <label for="last_name"><center>Add Comment</center></label>
                                </div> 
                                

                                <div class="input-field col m4 s2">
                                        <div class="input-field col m2 s2">
                                          <button id="add_comment" class="waves-effect waves-circle waves-light btn-floating btn-medium secondary-content gradient-45deg-light-blue-cyan">
                                            <i class="material-icons">add</i></button>
                                        </div>
                                        <div class="input-field col m2 s2">
                                                <button id="like" class="waves-effect waves-circle waves-light btn-floating btn-medium secondary-content gradient-45deg-light-blue-cyan" >
                                                  <i class="material-icons">thumb_up</i></button>
                                        </div>
                                
                                </div>

                                      
                                            
                                          
                                
                                

                                </div> 
                            </td>
                          </tr>
                          <% }) %>

                      </table>

                    </div>
              </div>
          </div>
        </div>
      </div>
    </div>


